<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/two_gradient"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/cat_item_imgViewResim"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="271dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cat_item_textViewKediAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kedi İsmi"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cat_item_textViewKediIrki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Kedi Irkı"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cat_item_textViewKediRengi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Kedi Rengi"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cat_item_textViewKediSehir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Kedi Sehir"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cat_item_textViewKediAciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Kedi Açıklama"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>