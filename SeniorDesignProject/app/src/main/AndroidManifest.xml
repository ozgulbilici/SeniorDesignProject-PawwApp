<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SeniorDesignProject"
        tools:targetApi="31">
        <activity
            android:name=".Activities.WebViewActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SignPage"
            android:exported="false"
            android:theme="@style/AppTheme.SignPage"/>
        <activity
            android:name=".Activities.ScanCat"
            android:exported="false"
            tools:ignore="DuplicateActivity"/>
        <activity
            android:name=".Activities.ReportPage"
            android:exported="false" />
        <activity
            android:name=".Activities.HomePage"
            android:exported="false" />
        <activity
            android:name=".Activities.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".Activities.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.CatReportActivity"
            android:exported="false"
            tools:ignore="DuplicateActivity"/>
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>